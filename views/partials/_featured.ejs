<div class="featured-section">
  <a href="/products">
    <h3 class="categories-title">Featured products</h3>
  </a>
  <table id="featured">
    <tbody>
      <tr class="product-row">
        <% for (let product of products) { %>
          <% if (product.featured === true) { %>
          <td class="product-block" >
            <span class="product-thumbnail">
              <a href="/products/product/<%= product.id %>"><img src="<%= product.img_url %>" alt="<%= product.title %>" style="width: 200px; height: 200px" /></a>
            </span>
            <span class="product-details">
              <h3 class="product-title">
                <%= product.title.slice(0, 16) %>
              </h3>
              <hr>
              <h4 class="product-price">Price: $<%= ((product.price) / 100).toFixed(2) %>
              </h4>
              <hr>
              <span class="product-buttons" id="pdt_<%=product.id%>">
                <a href="/products/product/<%= product.id %>"><button class="view-details">View product
                    details</button></a>
                <form class="add-wishlist-form" method="post" action="products/wishlist/<%= product.id %>/add">
                  <button class="add-to-wishlist">Add to wishlist</button>
                </form>
              </span>
            </span>
          </td>
          <% } %>
          <% } %>
      </tr>
    </tbody>
  </table>
</div>
